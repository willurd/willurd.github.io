@import 'variables'

// ======================================================================
// Body & Chrome
// ======================================================================

body
  background-color #f5f5f5
  color $colorText
  font-family 'Open Sans', sans-serif
  font-size $fontSizeRegular
  margin 0
  padding 0
  text-align center

.App
  box-shadow 0 0 15px 0px rgba(0, 0, 0, 1)
  margin 0 15px
  padding 60px
  min-height 100vh

.Stripes
  bottom 0
  opacity 0.5
  position absolute
  top 0

// ======================================================================
// Native elements
// ======================================================================

h1
  color $colorHeader
  font-family 'Josefin Sans', sans-serif
  font-size $fontSizeExtraLarge
  font-weight bold
  text-shadow 2px 2px rgba(0, 0, 0, 0.20)

a
  color $colorLink

  &:hover
    color lighten($colorLink, 25%)

// ======================================================================
// Header
// ======================================================================

.Photo img
  border 5px solid #fff
  border-radius 100px
  box-shadow 2px 2px 15px -5px rgba(0, 0, 0, 0.75)
  height 200px
  width 200px

.Whatami
  margin 10px 20px

  .spacer
    color $colorMutedText
    margin 0 8px

.email
  font-size $fontSizeSmall

  em
    font-style normal

  span
    color $colorMutedText

.Navigation
  font-weight 300
  list-style-type none
  margin 50px
  padding 0

  .NavItem
    display inline-block
    margin 0 10px

    a
      font-size 16px
      padding 8px 12px
      text-decoration none

      &.active
        background-color $colorLink
        color #fff

      &:hover
        background-color lighten($colorLink, 25%)
        color #fff

// ======================================================================
// Home
// ======================================================================

.MyLinks
  list-style-type none
  margin 0
  padding 0

  .IconLink
    display inline-block

    i
      border-radius 10px
      color $colorMutedText
      display inline-block
      font-size 40px
      height 64px
      line-height 64px
      margin 5px
      text-align center
      width 64px
      vertical-align bottom

    &.accredible i
      background url('/static/img/icon/accredible-grey.png') no-repeat center center;

      &:hover
        background-image url('/static/img/icon/accredible-white.png');
        background-color rgb(66, 139, 202)

    &.gibbon i
      background url('/static/img/icon/gibbon-grey.png') no-repeat center center;

      &:hover
        background-image url('/static/img/icon/gibbon-white.png');
        background-color #37C5AC

    &.linkedin i:hover
      background-color #0D62A6
      color #fff

    &.github i:hover
      background-color #000000
      color #fff



