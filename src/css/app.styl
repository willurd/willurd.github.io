@import 'colors'

body {
  background-color #f5f5f5
  color $colorText
  margin 0
  padding 0
  text-align center
}

.App {
  box-shadow 0 0 15px 0px rgba(0, 0, 0, 1)
  margin 0 15px
  padding 60px
  min-height 100vh
}

.Stripes {
  bottom 0
  opacity 0.5
  position absolute
  top 0
}

.Photo {

}

.Photo img {
  border 5px solid #fff
  border-radius 100px
  box-shadow 0px 0px 15px -5px rgba(0, 0, 0, 0.75)
  height 200px
  width 200px
}

h1 {
  font-family "Josefin Sans"
  font-size 32px
}

.email span {
  color $mutedText
}
